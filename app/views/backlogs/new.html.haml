- title 'Create a backlog'
- content_for :head do
  = include_javascripts :validation
  = include_javascripts :new_backlog

- content_for :title do
  %h1 Create a backlog

%p Please note that the name for your backlog must be unique.

= form_for(@backlog, :url => account_backlogs_path(current_account, @backlog)) do |f|
  - unless @backlog.errors.blank?
    .form_errors
      We were unable to create a new backlog.  Please correct the following fields first:
      %ul
        - @backlog.errors.full_messages.each do |error|
          %li
            = error

  = f.label :name, "Backlog name"
  .input-row
    = f.text_field :name

  = f.label :rate, "Rate", :class => 'spacer'
  .input-row
    = f.text_field :rate

  = f.label :velocity, "Velocity", :class => 'spacer'
  .input-row
    = f.text_field :velocity

  .input-row.for-check-box
    = f.check_box :use_50_90
    = f.label :use_50_90, "Use the 50/90 estimation method"

  %br/
  = f.submit "Create new backlog"
  = link_to "cancel", account_path(current_account)
