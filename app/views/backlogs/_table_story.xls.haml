%td{:valign => 'top'}
  = "#{story.theme.code}#{story.unique_id}"
%td{:valign => 'top'}
  = "#{t 'backlog.as_a', :default => 'As a'} #{story.as_a}"
  %br{ :style => 'mso-data-placement:same-cell;' }
  = "#{t 'backlog.i_want_to', :default => 'I want to'} #{story.i_want_to}"
  %br{ :style => 'mso-data-placement:same-cell;' }
  = "#{t 'backlog.so_i_can', :default => 'So I can'} #{story.so_i_can}"
%td{:valign => 'top'}
  - story.acceptance_criteria.each_with_index do |criterion, index|
    = "#{index+1}. #{criterion.criterion}"
    %br{ :style => 'mso-data-placement:same-cell;' }
%td{:valign => 'top'}
  = story.comments
%td{:valign => 'top'}
  = "#{t 'backlog.sprint', :default => 'Sprint'} #{story.sprint_story.sprint.iteration}" if story.sprint_story.present?
- if use_50_90
  %td{:valign => 'top'}
    = story.score_50
  %td{:valign => 'top'}
    = story.score_90
- else
  %td{:valign => 'top'}
    = story.score
%td{:valign => 'top'}
  = story.cost_formatted
%td{:valign => 'top'}
  = story.days_formatted