# encoding: utf-8
!= render :partial => '/layouts/head'
%div.main-title-logo
  %h1
    =link_to 'iBacklog', root_path
%div.account-info
  - if user_signed_in?
    Hello #{current_user.name}.
    = link_to 'Update my details.', edit_user_registration_path
    Not you, #{link_to "sign out", destroy_user_session_path }?
  - else
    = link_to 'Log in', new_user_session_path
    |
    = link_to 'Sign up', new_user_registration_path

%div.body
  #alert-space
    - if notice
      %div.notice
        = notice
    - if alert
      %div.alert
        = alert

  = yield