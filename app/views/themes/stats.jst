<% if (model.get('name') && model.get('name').length) { %>
  <div class="title">
    Total for theme '<%= htmlEncode(model.get('name')) %>'
  </div>
<% } %>
<div class="metrics">
  <%= addCommas((model.get('points') || 0).toFixed(1)) %> points / <%= model.get('cost_formatted')%> / <strong><%= addCommas((model.get('days') || 0).toFixed(1)) %> days</strong>
</div>