- title 'Sign up to easyBacklog'

- content_for :title do
  %h1= "Get access to the backlogs of #{@invite_company.name}"

#invite
  %p
    = "You have been sent an invite to join the account for #{@invite_company.name} on easyBacklog."
    In order to gain access to this account you will either need to register for free now, or log in using your existing account.
  .sign-up
    %h2 Register for free
    = form_for('user', :url => registration_path(@user)) do |f|
      != render :partial => '/devise/registrations/form', :locals => { :f => f,  :resource => @user }
      %p= f.submit "Register"
  .or
    OR
  .login
    %h2 Log in
    = render :partial => '/devise/sessions/form'