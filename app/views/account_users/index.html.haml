- title 'Users'
- content_for :head do
  = include_javascripts :users

- if @users.blank?
  - content_for :title do
    %h1 No users have access
- else
  - content_for :title do
    %h1 Account users
  %p
    The following people have access to this account:
  %form
    %table.users
      %tr
        %th Name
        %th Email address
        %th Admin Rights?
      - @users.each do |account_user|
        %tr
          %td
            = account_user.user.name
          %td
            = account_user.user.email
          - unless account_user.user == current_user
            %td.admin
              = check_box_tag "user-#{account_user.user.id}", 1, account_user.admin?, :title => 'Click to toggle admin rights', :class => 'admin vtip'
              = label_tag "user-#{account_user.user.id}", (account_user.admin? ? 'Yes' : 'No'), :id => "label-user-#{account_user.user.id}", :title => 'Click to toggle admin rights', :class => 'vtip'
            %td.action
              = link_to account_user_path(current_account, account_user.user), :method => 'delete', :title => 'Remove user?', :confirm => 'Are you sure you want to remove this user from your account?' do
                %span.ui-icon.ui-icon-trash
          - else
            %td.admin
              %b{ :title => 'You cannot turn off your own admin rights', :class => 'vtip' } Yes
  - unless @invites.empty?
    %br/
    %p
      The following people have been invited to join but not yet signed up:
      %table.invites
        %tr
          %th Email address
        - @invites.each do |invite|
          %tr
            %td
              = invite.email
            %td.action
              = link_to account_invite_path(current_account, invite), :method => 'delete', :title => 'Revoke invite?', :confirm => 'Are you sure you want to revoke this invite?' do
                %span.ui-icon.ui-icon-trash

  %br/
  = link_to 'Add users', new_account_user_path(current_account), :class => 'button'