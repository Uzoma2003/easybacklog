@import 'compass/reset.scss';
@import 'compass/utilities/general/clearfix';
@import 'compass/css3/text-shadow';
@import 'compass/css3/box-shadow';
@import 'compass/css3/border-radius';
@import 'compass/css3/opacity';
@import '960/960_grid';
@import '960/960_text';
@import 'partials/browser_support';

@import 'jquery.lightbox-0.5';

$ninesixty-columns: 24;
$ninesixty-grid-width: 960px;
$ninesixty-gutter-width: 10px;

@mixin wrapper960 {
  width: $ninesixty-grid-width;
  margin: 0 auto 0 auto;
}

/* Firefox and Chrome on Windows don't anti-alias type, so we can "force" a correction of this issue */
@mixin fix-type {
  text-shadow: rgba(255, 255, 255, 0.2) 0 0 1px;
}

$body-bg: #5584D4;
$clarendon-font: 'ClarendonRoman', "Lucida Grande", Arial, Helvetica, sans-serif;
$handwritten-font: 'DakotaRegular', Arial, Helvetica, sans-serif;
@mixin clarendon-font {
  font-family: $clarendon-font;
  @include fix-type;
}
@mixin handwritten-font {
  font-family: $handwritten-font;
  @include fix-type;
}

/* fonts generated from http://www.fontsquirrel.com/ */
/* revised format basedd on http://www.fontspring.com/blog/the-new-bulletproof-font-face-syntax */
/* IE and Firefox must load fonts from application domain, so just load all fonts from there */
@font-face {
  font-family: 'ClarendonRoman';
  src: url('<%=Rails.configuration.fonts_domain%>/assets/fonts/clarendon-bt-webfont.eot?#iefix') format('embedded-opentype'),
     url('<%=Rails.configuration.fonts_domain%>/assets/fonts/clarendon-bt-webfont.woff') format('woff'),
     url('<%=Rails.configuration.fonts_domain%>/assets/fonts/clarendon-bt-webfont.ttf')  format('truetype'),
     url('<%=Rails.configuration.fonts_domain%>/assets/fonts/clarendon-bt-webfont.svg#svgFontName') format('svg');
  font-weight: normal;
  font-style: normal;
}

@font-face {
    font-family: 'DakotaRegular';
    src: url('<%=Rails.configuration.fonts_domain%>/assets/fonts/dakota-regular-webfont.eot?#iefix') format('embedded-opentype'),
       url('<%=Rails.configuration.fonts_domain%>/assets/fonts/dakota-regular-webfont.woff') format('woff'),
       url('<%=Rails.configuration.fonts_domain%>/assets/fonts/dakota-regular-webfont.ttf')  format('truetype'),
       url('<%=Rails.configuration.fonts_domain%>/assets/fonts/dakota-regular-webfont.svg#svgFontName') format('svg');
  font-weight: normal;
  font-style: normal;
}

