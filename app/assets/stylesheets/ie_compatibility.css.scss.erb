@mixin ie-hack-transparency-hack {
  background: transparent;
  filter:progid:DXImageTransform.Microsoft.gradient(startColorStr=#99FFFFFF,endColorStr=#99FFFFFF);
  zoom: 1;
}

ul.stories {
  li.story {
    &>.unique-id {
      &>div.data { @include ie-hack-transparency-hack }
    }
    &>.user-story, &>.acceptance-criteria, &>.comments { @include ie-hack-transparency-hack }
    &>.score-50, &>.score-90 {
      &>div { @include ie-hack-transparency-hack }
    }
  }
}